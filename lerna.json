{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "angular",
      "message": "chore(release): %s"
    }
  },
  "ignoreChanges": ["**/*.md"]
}
